import matplotlib.pyplot as plt
import seaborn as sns
import pandas as pd

# Step 1: Extract Feature Importances from Random Forest
feature_importance = rf_model.feature_importances_

# Step 2: Create DataFrame of Features & Importance Scores
importance_df = pd.DataFrame({"Feature": selected_features, "Importance": feature_importance})
importance_df = importance_df.sort_values(by="Importance", ascending=False)

# Step 3: Plot Top Features
plt.figure(figsize=(12, 6))
sns.barplot(x=importance_df["Importance"].head(20), y=importance_df["Feature"].head(20), palette="viridis")
plt.xlabel("Feature Importance Score")
plt.ylabel("Feature")
plt.title("Top 20 Most Important Features for Predicting Gentrification")
plt.show()
